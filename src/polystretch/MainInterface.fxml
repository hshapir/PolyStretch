<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="polystretch.MainInterfaceController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="closeButton" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="aboutButton" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <right>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="43.0" layoutY="14.0" text="Motor Control" AnchorPane.leftAnchor="43.0" AnchorPane.rightAnchor="43.0" AnchorPane.topAnchor="5.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button fx:id="oneStepButton" layoutX="14.0" layoutY="48.0" mnemonicParsing="false" onMouseClicked="#moveOneStepForward" prefHeight="25.0" prefWidth="175.0" text="Step Motor Once" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="48.0" />
                  <Button fx:id="customStepsButton" layoutX="122.0" layoutY="151.0" mnemonicParsing="false" onMouseClicked="#moveCustomStepsForward" text="Go!" AnchorPane.rightAnchor="43.0" AnchorPane.topAnchor="151.0" />
                  <TextField fx:id="numStepsField" layoutX="43.0" layoutY="151.0" prefHeight="25.0" prefWidth="50.0" AnchorPane.leftAnchor="43.0" AnchorPane.topAnchor="151.0" />
                  <Label layoutX="16.0" layoutY="86.0" prefHeight="65.0" prefWidth="193.0" text="Custom Number of Steps (each step is around 1 micron)" textAlignment="CENTER" wrapText="true" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="86.0" />
                  <Button fx:id="motorResetButton" layoutX="34.0" layoutY="215.0" mnemonicParsing="false" onAction="#backToStartingPosition" text="Reset to Starting Position" />
                  <Button fx:id="reverseStepButton" layoutX="33.0" layoutY="256.0" mnemonicParsing="false" onAction="#moveOneStepBackward" prefHeight="44.0" prefWidth="152.0" text="One Reverse Step (Manual Calibration Only)" textAlignment="CENTER" wrapText="true" />
                  <Button fx:id="recalibrateButton" layoutX="40.0" layoutY="328.0" mnemonicParsing="false" onAction="#resetStepCount" prefHeight="44.0" prefWidth="139.0" text="Set Current Position as Starting Position" textAlignment="CENTER" wrapText="true" />
               </children>
            </AnchorPane>
         </right>
         <left>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="51.0" layoutY="1.0" text="Data Output" textAlignment="CENTER" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="5.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label layoutX="63.0" layoutY="40.0" prefHeight="17.0" prefWidth="80.0" text="Current Strain:" textAlignment="CENTER" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="40.0" />
                  <TextField fx:id="strainOutputField" editable="false" layoutX="49.0" layoutY="69.0" prefHeight="34.0" prefWidth="103.0" AnchorPane.leftAnchor="49.0" AnchorPane.rightAnchor="48.0" AnchorPane.topAnchor="69.0" />
               </children>
            </AnchorPane>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
